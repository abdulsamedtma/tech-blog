<div class="card">
    <h3 class="card-header">Edit Post</h3> <!-- Display the header "Edit Post" in the card. -->
    <form class="card-body edit-post-form">
        <div class="form-group">
            <label for="post-title" class="form-label">Title</label> <!-- Display a label for the post title input field. -->
            <input name="post-title" type="text" value="{{post.title}}" class="form-input" /> <!-- Display the input field for the post title with the current title as its value. -->
        </div>

        <div class="form-group">
            <label class="form-label" for="content">Content</label> <!-- Display a label for the content input field. -->
            <input name="content" type="text" value="{{post.content}}" class="form-input" /> <!-- Display the input field for the content with the current content as its value. -->
        </div>

        <div class="button-wrap">
            <button type="submit" class="btn">Update Post</button> <!-- Display a button to update the post. -->
        </div>
        <div class="button-wrap">
            <button type="button" class="delete-btn btn">Delete Post</button> <!-- Display a button to delete the post. -->
        </div>
    </form>
</div>

<script src="/js/edit-post.js"></script> <!-- Include the JavaScript file for handling the edit post functionality. -->
