<div class="comments">
  {{#each this}}
  <!-- Start iterating over an array of comments (this) -->
  <div>
    <!-- Start a new comment container -->
    <p class="card-body2">
      <!-- Display the comment content -->
      {{commentContent}} - {{user.username}} {{format_date dateCreated}}
      <!-- Display the username of the commenter and the formatted date of creation -->
    </p>
    <!-- Close the comment container -->
  </div>
  <!-- End of the iteration over comments -->
  {{/each}}
</div>



