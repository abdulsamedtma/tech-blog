<div class="card">
    <h3 class="card-header">Create New Post</h3> <!-- Display the header "Create New Post" in the card. -->
    <form class="card-body new-post-form">
        <div class="form-group">
            <label for="post-title" class="form-label">Title</label> <!-- Label for the post title input field. -->
            <input type="text" id="post-title" name="post-title" class="form-input" /> <!-- Post title input field. -->
        </div>

        <div class="form-group">
            <label class="form-label" for="content">Content</label> <!-- Label for the content input field. -->
            <input id="content" name="content" class="form-input" /> <!-- Content input field. -->
        </div>

        <div class="form-group form-button button-wrap">
            <button type="submit" class="btn">Create</button> <!-- Create button for submitting the new post. -->
        </div>
    </form>
</div>

<script src="/js/new-post.js"></script> <!-- Include the JavaScript file for handling the new post creation functionality. -->

